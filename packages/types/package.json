{
  "name": "@filecoin-pay/types",
  "version": "1.0.0",
  "private": true,
  "description": "Shared TypeScript types generated from subgraph GraphQL schema",
  "main": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "generate": "graphql-codegen --config codegen.yml",
    "build": "pnpm generate && tsc",
    "clean": "rm -rf dist generated",
    "lint": "biome lint",
    "type-check": "pnpm generate && tsc --noEmit"
  },
  "dependencies": {
    "@filecoin-pay/subgraph": "workspace:*",
    "@filecoin-pay/configs": "workspace:*",
    "graphql": "^16.9.0"
  },
  "devDependencies": {
    "@filecoin-pay/configs": "workspace:*",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.2",
    "@graphql-codegen/typescript-operations": "^4.4.0"
  }
}
