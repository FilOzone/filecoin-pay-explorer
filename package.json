{
  "name": "filecoin-pay-tooling",
  "version": "1.0.0",
  "private": true,
  "description": "Filecoin Payment Explorer - Monorepo for subgraph, metrics, and explorer applications",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "turbo run type-check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  }
}
