{
  "name": "filecoin-pay-tooling",
  "version": "1.0.0",
  "private": true,
  "description": "Filecoin Payment Explorer - Monorepo for subgraph, metrics, and explorer applications",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
